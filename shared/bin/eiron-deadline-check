#!/bin/bash
set -a
source /mnt/ssd/aletheia/shared/config/aletheia.env
set +a 2>/dev/null || true
set -eo pipefail
# Eiron deadline check - runs daily at 6pm
# Pings Cody if there are deadlines due tomorrow

set -e

TOMORROW=$(date -d "+1 day" +%Y-%m-%d)
TODAY=$(date +%Y-%m-%d)
LOG="${ALETHEIA_ROOT:-/mnt/ssd/aletheia}/eiron/deadline-check.log"

echo "[$(date)] Checking deadlines for $TOMORROW" >> "$LOG"

# Send a message to Eiron to check and report
# Using aletheia send to trigger the agent
# TODO: migrate to sessions_send
aletheia send --agent eiron --message "DEADLINE CHECK: Review Todoist TEMBA project for any tasks due tomorrow ($TOMORROW). If any exist, send Cody a summary. If none, log and skip." >> "$LOG" 2>&1

echo "[$(date)] Deadline check triggered" >> "$LOG"
