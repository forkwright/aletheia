#!/bin/bash
source /mnt/ssd/aletheia/shared/config/aletheia.env 2>/dev/null || true
# Wrapper to call graph with agent-specific subgraph

AGENT="${GRAPH_AGENT:-syn}"

case "$AGENT" in
    syl) export GRAPH_NAME="knowledge_home" ;;
    chiron) export GRAPH_NAME="knowledge_work" ;;
    eiron) export GRAPH_NAME="knowledge_school" ;;
    demiurge) export GRAPH_NAME="knowledge_craft" ;;
    *) export GRAPH_NAME="knowledge" ;;
esac

exec ${ALETHEIA_NOUS:-${ALETHEIA_ROOT:-/mnt/ssd/aletheia}/nous}/syn/bin/graph "$@"
