{
  "name": "aletheia",
  "version": "0.10.0",
  "license": "AGPL-3.0-only",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsdown",
    "dev": "tsx src/entry.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "lint": "oxlint src/ --fix",
    "lint:check": "oxlint src/",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint:check && npm run test",
    "precommit": "npm run typecheck && npm run lint:check && npm run test:fast",
    "test:fast": "vitest run -c vitest.fast.config.ts",
    "test:affected": "vitest run --changed HEAD~1",
    "test:file": "vitest run"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@hono/node-server": "^1.14.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^11.8.0",
    "commander": "^13.1.0",
    "hono": "^4.12.1",
    "playwright-core": "^1.58.2",
    "tslog": "^4.9.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.13.4",
    "@vitest/coverage-v8": "^3.2.4",
    "oxlint": "^1.48.0",
    "tsdown": "^0.20.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
